<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="./css/output.css" rel="stylesheet">
    <title>History</title>

</head>

<body class="bg-gray-900 text-white-900">

    <%- include("partials/header") %> <!-- Include header -->

        <main class="main max-w-4xl mx-auto px-5 p-4 min-h-[80vh] text-gray-300 mt-6">
            <div class="history flex justify-between">
                <h2 class="text-2xl font-semibold mb-4 text-left">Your History</h2>
                <button class="px-3 py-2 bg-purple-700 mb-4 hover:bg-purple-950"><a href="/">Home</a></button>
            </div>

            <div id="historyList" class="space-y-2">
                <% history.forEach(repo=> { %>
                    <div class="p-4 bg-gray-400 text-white border border-gray-600">
                        <p>
                            <%= repo %>
                        </p>
                    </div>
                    <% }) %>

            </div>
        </main>

        <%- include("partials/footer") %> <!-- Include footer -->

            <script src="/js/script.js"></script>
</body>

</html>